<div class="row">
  <div class="col-sm-3 left-fixed">
    <div class="row">
      <div class="col-sm-12">
        <div class="profile">
          {{gravatar-image class='avatar' email=user.email hash=mode.gravatar_hash title=user.name}}
          <h4 id="name">{{user.name}}</h4>
        </div>
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12">
        {{#if isFileSelected}}
          <button class='btn btn-primary btn-block disabled' {{action "open"}}>
            <i class="icon-folder-open"></i> Processing...
          </button>
        {{else}}
          <button class='btn btn-primary btn-block' {{action "open"}}>
            <i class="icon-folder-open"></i> Select Project
          </button>
        {{/if}}
      </div>
    </div>
    <div class="row">
      <div class="col-sm-12">
        {{#if cleaning}}
          <div class='button disabled'>Cleaning...</div>
        {{else}}
          <a class='btn btn-primary btn-block' {{action "clean"}}>
            <i class="icon-ccw"></i> Clean</a>
        {{/if}}
      </div>
    </div>
    {{#if isFileSelected}}
      <div class="row">
        <div class="col-sm-12">
          <div class="loader">
            <i class="icon-spin1 animate-spin"></i>
          </div>
        </div>
      </div>
    {{/if}}
  </div>
</div>
<div class="col-sm-9 right-relative">
  <div class="row">
    <div class="col-sm-12">
      <div class="row">
        {{render 'shared/navbar'}}
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      {{#each buildTypes as |type|}}
        <div class='small-4 medium-4 large-4 columns'>
          {{build-type type=type path=path is_interrupted=is_interrupted}}
        </div>
        {{else}}
          <h3>No Built types found</h3>
      {{/each}}
    </div>
  </div>
  <div class='status-bar'>
    {{#if isFileSelected}}
      Selected {{path}} {{else if stdout}}
      <span class='{{if success "success" "error"}}'>{{stdout}}</span>
    {{else}}
      Ready. Bring it on!
    {{/if}}
  </div>
</div>
