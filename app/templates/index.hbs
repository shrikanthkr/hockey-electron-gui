{{outlet}}

 <h4>This program will help you to generate builds!</h4>

{{#if path}}
{{else}}
<div class='secondary button' {{action "open"}}>Select Project folder</div>
{{/if}}
{{#if cleaning}}
  <div class='button disabled' >Cleaning...</div> 
{{else}}
  <div class='button' {{action "clean"}}>Clean</div> 
{{/if}}


<div style='paddding:20px' class='warning'>{{path}}</div>

<div class='{{if success "success" "error"}} '>{{stdout}}</div>
<div class="row">
{{#each buildTypes as |type|}}
	<div class='small-4 medium-4 large-4 columns'>
  	{{build-type type=type path=path}}
  </div>
{{/each}}
</div>

