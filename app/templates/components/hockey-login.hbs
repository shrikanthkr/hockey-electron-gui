<div class="row">
	<div class="col-md-8 col-md-offset-2 col-sm-12">
		<div class="row">
			<div class="col-sm-6 col-sm-offset-3">
				<div id="login-form">
					<h2 class="title">Hockey Electron</h2>
					<div class="well">
						<h3 class="underlined">Login</h3>
						<form>
							<div class="form-group">
								<label for="email">Email</label>
								{{input type="email" value=user.email placeholder="user@example.com" autocomplete="on" class="form-control"}}
							</div>
							<div class="form-group">
								<label for="password">Password</label>
								{{input type="password" value=user.password placeholder="********" class="form-control"}}
							</div>
							<div class="form-group">
								<a {{action 'login'}} class="btn btn-success btn-block">Login to Hockey</a>
							</div>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
